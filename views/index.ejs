<%- include("header") -%>
  <div class="box" id="heading">
    <h1>
      <%= listtitle %>
    </h1>
  </div>
  <div class="box">
  <%  newitem.forEach(function(item){%>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="box" value="<%=item._id %>" onchange="this.form.submit()">
        <p>
          <%=item.name %>
        </p>
      </div>
      <input type="hidden" name="listName" value="<%= listtitle %>"></input>
    </form>
      
   <% })%>
        <form action="/" class="item" method="post">
          <input type="text" name="nameitem" placeholder="New Item" autocomplete="off">
          <button type="submit" name="list" value=<%=listtitle %>>+</button>
        </form>

  </div>

  <%- include("footer") -%>